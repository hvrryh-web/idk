# Environment file template for WuXuxian TTRPG webapp
# Copy this file to .env and update with your actual values

# Backend Configuration
# See backend/.env.example for backend-specific settings

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# ComfyUI Configuration
# Set to true to enable actual ComfyUI integration (requires ComfyUI server)
COMFYUI_ENABLED=false
# ComfyUI server URL
COMFYUI_URL=http://127.0.0.1:8188
# Timeout for ComfyUI operations in seconds
COMFYUI_TIMEOUT=300
# Output directory for generated assets (relative to backend)
COMFYUI_OUTPUT_DIR=outputs/comfyui

# Asset Generation Limits
ASSET_MAX_VARIANTS=10
ASSET_MAX_NAME_LENGTH=100
ASSET_MAX_DESCRIPTION_LENGTH=1000
